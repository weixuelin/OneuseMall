<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="@dimen/qb_px_50"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginLeft="@dimen/qb_px_40"
            android:layout_marginTop="@dimen/qb_px_30"
            android:scaleType="center"
            android:src="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginTop="@dimen/qb_px_30"
            android:text="注册账号"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_38" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginTop="@dimen/qb_px_40"
            android:layout_marginRight="@dimen/qb_px_70"
            android:theme="@style/CustomAppTheme_textinputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_100"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textSize="@dimen/qb_px_30" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginRight="@dimen/qb_px_70"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_70"
                android:layout_marginTop="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_70"
                android:theme="@style/CustomAppTheme_textinputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_100"
                    android:background="@color/transparent"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textSize="@dimen/qb_px_30" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/qb_px_170"
                android:layout_height="@dimen/qb_px_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/qb_px_70"
                android:background="@drawable/btn_orange_line_circle"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/orange"
                android:textSize="@dimen/qb_px_24" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginRight="@dimen/qb_px_70"
            android:background="@color/line" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_70"
            android:theme="@style/CustomAppTheme_textinputLayout"
            app:passwordToggleDrawable="@drawable/password_visible_invisible"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_100"
                android:background="@color/transparent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="@dimen/qb_px_30" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginRight="@dimen/qb_px_70"
            android:background="@color/line" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_80"
            android:layout_marginLeft="@dimen/qb_px_70"
            android:layout_marginTop="@dimen/qb_px_50"
            android:layout_marginRight="@dimen/qb_px_70"
            android:background="@drawable/btn_grey_circle"
            android:enabled="false"
            android:text="注册"
            android:textColor="@color/grey_hint"
            android:textSize="@dimen/qb_px_30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/qb_px_120"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/qb_px_70"
        android:paddingRight="@dimen/qb_px_70">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:gravity="center"
            android:text="点击注册代表您阅读并同意"
            android:textColor="@color/black_3"
            android:textSize="@dimen/qb_px_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_60"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="《一用商城注册协议》"
            android:textColor="@color/orange"
            android:textSize="@dimen/qb_px_24" />
    </LinearLayout>
</RelativeLayout>