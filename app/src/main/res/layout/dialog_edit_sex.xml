<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_100"
        android:gravity="center"
        android:text="修改昵称"
        android:textColor="@color/black"
        android:textSize="@dimen/qb_px_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_200"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_edit_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_dialog_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/text_dialog_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:text="男"
                android:textColor="@color/black"
                android:textSize="@dimen/qb_px_30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_edit_woman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_dialog_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/woman" />

            <TextView
                android:id="@+id/text_dialog_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:text="女 "
                android:textColor="@color/black"
                android:textSize="@dimen/qb_px_30" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>