<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_100">

        <TextView
            android:id="@+id/text_team_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_100"
            android:gravity="center"
            android:paddingLeft="@dimen/qb_px_30"
            android:paddingRight="@dimen/qb_px_30"
            android:text="取消"
            android:textColor="@color/grey_main"
            android:textSize="@dimen/qb_px_30" />

        <TextView
            android:id="@+id/text_team_success"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_100"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/qb_px_30"
            android:paddingRight="@dimen/qb_px_30"
            android:text="完成"
            android:textColor="@color/orange"
            android:textSize="@dimen/qb_px_30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/qb_px_30"
            android:layout_marginRight="@dimen/qb_px_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_96"
                android:gravity="center"
                android:text="2019-11-12"
                android:textColor="@color/orange"
                android:textSize="@dimen/qb_px_28" />

            <View
                android:id="@+id/view_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_4"
                android:background="@color/orange" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_96"
            android:gravity="center"
            android:text="至"
            android:textColor="@color/grey_main"
            android:textSize="@dimen/qb_px_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_30"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_stop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_96"
                android:gravity="center"
                android:text="结束日期"
                android:textColor="@color/grey_main"
                android:textSize="@dimen/qb_px_28" />

            <View
                android:id="@+id/view_stop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_4"
                android:background="@color/line" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/wheelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"></FrameLayout>
</LinearLayout>