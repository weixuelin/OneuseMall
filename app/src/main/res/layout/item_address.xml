<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/qb_px_30">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/qb_px_20"
        android:paddingRight="@dimen/qb_px_20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_60"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张老师"
                    android:textColor="@color/black"
                    android:textSize="@dimen/qb_px_26" />

                <TextView
                    android:id="@+id/text_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_50"
                    android:text="182****4568"
                    android:textColor="@color/black"
                    android:textSize="@dimen/qb_px_26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_address_mo"
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="@dimen/qb_px_35"
                    android:layout_marginRight="@dimen/qb_px_16"
                    android:src="@drawable/address_check" />

                <TextView
                    android:id="@+id/text_address_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆市南岸区南坪街道福红路58号H9-25-8"
                    android:textColor="@color/grey_hint"
                    android:textSize="@dimen/qb_px_26" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_30"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/qb_px_20"
        android:paddingRight="@dimen/qb_px_20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_address_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_80"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:src="@drawable/address_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_80"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:gravity="center_vertical"
                    android:text="编辑"
                    android:textColor="@color/black_3"
                    android:textSize="@dimen/qb_px_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_address_delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_80"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:src="@drawable/address_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_80"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:gravity="center_vertical"
                    android:text="删除"
                    android:textColor="@color/black_3"
                    android:textSize="@dimen/qb_px_24" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_20"
        android:background="@color/app_bg" />
</LinearLayout>