<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginRight="@dimen/qb_px_15"
        android:background="@drawable/btn_white_not"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_30">

        <ImageView
            android:id="@+id/image_collection_icon"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/qb_px_270"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_15"
            android:src="@drawable/img4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_20"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_15"
            android:text="云南金钻手剥凤梨净重8斤水果牛奶香"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_28" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/red"
                android:textSize="@dimen/qb_px_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_5"
                android:text="58.00"
                android:textColor="@color/red"
                android:textSize="@dimen/qb_px_30" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_8"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/image_collection"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量 599"
                    android:textColor="@color/grey_main"
                    android:textSize="@dimen/qb_px_22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:text="95% 好评"
                    android:textColor="@color/grey_main"
                    android:textSize="@dimen/qb_px_22" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_collection"
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/collection" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>